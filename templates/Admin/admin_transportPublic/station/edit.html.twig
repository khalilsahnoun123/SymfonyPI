{% extends 'base.html.twig' %}

{% block title %}Modifier Station{% endblock %}

{% block body %}
 

  <!-- ======= Sidebar ======= -->
  <aside id="sidebar" class="sidebar">
    <ul class="sidebar-nav" id="sidebar-nav">
      <li class="nav-heading">Pages</li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_station_index') }}">
          <i class="bi bi-collection-fill"></i><span>Gestion De Stations</span>
        </a>
      </li>
      <!-- autres liens -->
    </ul>
  </aside>

  <main id="main" class="main">
    <section class="section dashboard">
      <div class="form-container">
        <div class="form-header">
            <h1 class="form-title">Modifier Station</h1>
            {% for msg in app.flashes('success') %}
              <div class="alert alert-success">{{ msg }}</div>
            {% endfor %}
            {% for msg in app.flashes('error') %}
              <div class="alert alert-danger">{{ msg }}</div>
            {% endfor %}
        </div>

        {{ form_start(form, {'attr': {'id': 'station_form'}}) }}
          <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
          </div>

          <div class="form-group">
            {{ form_label(form.adresse) }}
            {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.adresse) }}
          </div>

          <div class="form-group">
            {{ form_label(form.ligne) }}
            {{ form_widget(form.ligne, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.ligne) }}
          </div>

          <div class="action-buttons">
            <a href="{{ path('app_station_index') }}" class="btn btn-back">
              <i class="bi bi-arrow-left"></i> Retour
            </a>
            <button type="submit" class="btn btn-save">
              <i class="bi bi-pencil-fill"></i> Mettre Ã  jour
            </button>
          
          </div>
        {{ form_end(form) }}
      </div>
    </section>
  </main>

  <style>
    .form-container { max-width: 800px; margin: 4rem auto; padding: 2rem; background: #fff; border-radius: 16px; box-shadow: 0 8px 32px rgba(31,38,135,0.05); }
    .form-header { margin-bottom: 2rem; border-bottom: 1px solid #dee2e6; padding-bottom: 1rem; }
    .form-title { font-weight: 800; font-size: 2rem; color: #333; }
    .form-group { margin-bottom: 1.5rem; }
    .action-buttons { display: flex; justify-content: space-between; margin-top: 2rem; }
    .btn { border-radius: 12px; padding: 0.75rem 1.5rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.5rem; cursor: pointer; }
    .btn-back { background: #fff; color: #4361ee; border: 1px solid #4361ee; }
    .btn-save { background: #4361ee; color: #fff; }
    .btn-danger { background: #f72585; color: #fff; }
    .btn:hover { opacity: 0.9; }
  </style>

{% endblock %}
