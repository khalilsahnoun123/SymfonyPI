{% extends 'base.html.twig' %}

{% block title %}Nouveau Type Réclamation{% endblock %}

{% block body %}
  <!-- ======= Header ======= -->
  <header id="header" class="header fixed-top d-flex align-items-center">
    <div class="d-flex align-items-center justify-content-between">
      <a href="index.html" class="logo d-flex align-items-center">
        <img src="assets/img/logo.png" alt="">
        <span class="d-none d-lg-block">Wasalni</span>
      </a>
      <i class="bi bi-list toggle-sidebar-btn"></i>
    </div>

    <div class="search-bar">
      <form class="search-form d-flex align-items-center" method="POST" action="#">
        <input type="text" name="query" placeholder="Search" title="Enter search keyword">
        <button type="submit" title="Search"><i class="bi bi-search"></i></button>
      </form>
    </div>

    <nav class="header-nav ms-auto">
      <ul class="d-flex align-items-center">
        <li class="nav-item d-block d-lg-none">
          <a class="nav-link nav-icon search-bar-toggle" href="#"><i class="bi bi-search"></i></a>
        </li>
        <li class="nav-item dropdown pe-3">
          <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
            <img src="assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
            <span class="d-none d-md-block dropdown-toggle ps-2">user name</span>
          </a>
        </li>
      </ul>
    </nav>
  </header>

  <!-- ======= Sidebar ======= -->
  <aside id="sidebar" class="sidebar">
    <ul class="sidebar-nav" id="sidebar-nav">
      <li class="nav-heading">Pages</li>

      <li class="nav-item"><a class="nav-link collapsed" href="#"><i class="bi bi-person"></i> <span>Home</span></a></li>
      <li class="nav-item"><a class="nav-link collapsed" href="{{ path('app_stations_index') }}"><i class="bi bi-question-circle"></i> <span>Gestion De Vélo</span></a></li>
      <li class="nav-item"><a class="nav-link collapsed" href="{{ path('app_covoiturage_index') }}"><i class="bi bi-envelope"></i> <span>Gestion De Covoiturage</span></a></li>
      <li class="nav-item"><a class="nav-link collapsed" href="{{ path('app_vehicule_index') }}"><i class="bi bi-card-list"></i> <span>Gestion De Taxi</span></a></li>
      <li class="nav-item"><a class="nav-link collapsed" href="#"><i class="bi bi-box-arrow-in-right"></i> <span>Transport Publique</span></a></li>
      <li class="nav-item"><a class="nav-link" href="{{ path('admin_typereclamation_index') }}"><i class="bi bi-dash-circle"></i> <span>Réclamations</span></a></li>
    </ul>
  </aside>

  <main id="main" class="main">
    <section class="section dashboard">
      <div class="bike-type-form">
        <div class="form-container">
          <div class="form-header">
            <h3><i class="bi bi-clipboard-plus"></i> Nouveau Type de Réclamation</h3>
            <p>Veuillez remplir le formulaire pour ajouter un nouveau type de réclamation.</p>
          </div>

          <div class="form-body">
            {{ form_start(form) }}

            <div class="form-group floating-label">
              <span class="input-icon"><i class="bi bi-tag"></i></span>
              {{ form_widget(form.libelle, {'attr': {'class': 'form-input', 'placeholder': ' '}}) }}
              <label for="libelle">Libellé</label>
              <span class="focus-line"></span>
            </div>

            <div class="form-group floating-label">
              <span class="input-icon"><i class="bi bi-chat-left-text"></i></span>
              {{ form_widget(form.description, {'attr': {'class': 'form-input', 'placeholder': ' '}}) }}
              <label for="description">Description</label>
              <span class="focus-line"></span>
            </div>

            <div class="form-footer">
              <button class="submit-btn" type="submit"><i class="bi bi-save"></i> Enregistrer</button>
            </div>

            {{ form_end(form) }}
          </div>
        </div>
      </div>

      <div class="action-buttons" style="margin-top: 2rem; text-align: center;">
        <a href="{{ path('admin_typereclamation_index') }}" class="btn btn-back" style="background: white; color: #3a86ff; border: 1px solid rgba(58, 134, 255, 0.3);">
          <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
      </div>
    </section>
  </main>
{% endblock %}
