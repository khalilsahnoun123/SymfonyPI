                    {{ form_widget(form.velo_image, {'attr': {
                        'class': 'file-input',
                        'accept': 'image/*'
                    }}) }}
                </div>
                <small class="form-hint">Recommended size: 800x600px (JPEG/PNG)</small>
            </div>
        </div>
    </div>

    <div class="form-footer">
        <button type="submit" class="submit-btn">
