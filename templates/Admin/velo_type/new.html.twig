        </div>

        <!-- Description -->
        <div class="form-group floating-label">
            <div class="input-icon">
                <i class="fas fa-align-left"></i>
            </div>
            {{ form_widget(form.description, {'attr': {
                'class': 'form-input',
                'placeholder': ' ',
