<style>
    .bike-type-form {
        --primary: #3a86ff;
        --primary-light: #4cc9f0;
        --secondary: #8338ec;
        --accent: #ff006e;
        --dark: #1a1a2e;
        --light: #f8f9ff;
        --success: #06d6a0;
        --gray: #64748b;
        --light-gray: #e2e8f0;
        
        max-width: 700px;
        margin: 0 auto;
        font-family: 'Inter', sans-serif;
    }

    .form-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .form-header {
        padding: 1.75rem;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
    }

    .form-header h3 {
        margin: 0 0 0.25rem 0;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .form-header p {
        margin: 0;
        opacity: 0.9;
        font-size: 0.95rem;
    }

    .form-body {
        padding: 2rem;
    }

    .form-group {
        margin-bottom: 1.75rem;
        position: relative;
    }

    /* Floating Label Inputs */
    .floating-label {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 1rem;
        top: 1.1rem;
        color: var(--primary);
        z-index: 2;
    }

    .form-input {
        width: 100%;
        padding: 1.25rem 1rem 1.25rem 3rem;
        border: 1px solid var(--light-gray);
        border-radius: 8px;
        font-size: 1rem;
        background-color: #f8fafc;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
    }

    .floating-label label {
        position: absolute;
        left: 3rem;
        top: 1.25rem;
        color: var(--gray);
        transition: all 0.3s ease;
        pointer-events: none;
        z-index: 1;
    }

    .focus-line {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--primary);
        transition: all 0.3s ease;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--primary);
        background-color: white;
        box-shadow: 0 0 0 3px rgba(58, 134, 255, 0.1);
    }

    .form-input:focus + label,
    .form-input:not(:placeholder-shown) + label {
        top: 0.5rem;
        left: 3rem;
        font-size: 0.75rem;
        color: var(--primary);
    }

    .form-input:focus ~ .focus-line {
        width: 100%;
    }

    /* Price Field Specific */
    .currency-indicator {
        position: absolute;
        right: 1rem;
        top: 1.25rem;
        color: var(--gray);
        font-weight: 500;
    }

    /* Image Upload */
    .image-upload {
        margin-top: 2rem;
    }

    .upload-container {
        border: 2px dashed var(--light-gray);
        border-radius: 12px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
    }

    .upload-container:hover {
        border-color: var(--primary);
        background-color: rgba(58, 134, 255, 0.05);
    }

    .upload-preview {
        position: relative;
        cursor: pointer;
    }

    .preview-icon {
        font-size: 2.5rem;
        color: var(--light-gray);
        margin-bottom: 1rem;
    }

    .upload-text {
        display: block;
        color: var(--gray);
        margin-bottom: 0.5rem;
    }

    .file-input {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        opacity: 0;
        cursor: pointer;
    }

    /* Form Footer */
    .form-footer {
        padding: 1.5rem;
        border-top: 1px solid var(--light-gray);
        text-align: right;
    }

    .submit-btn {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        border: none;
        border-radius: 8px;
        padding: 0.875rem 1.75rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(58, 134, 255, 0.2);
    }

    .form-hint {
        display: block;
        margin-top: 0.5rem;
        color: var(--gray);
        font-size: 0.8rem;
    }

    @media (max-width: 768px) {
        .form-body {
            padding: 1.5rem;
        }
        
        .form-input {
            padding-left: 2.75rem;
        }
        
        .input-icon {
            left: 0.75rem;
        }
    }
</style>

<script>
    // Image preview functionality
    document.getElementById('{{ form.velo_image.vars.id }}').addEventListener('change', function(event) {
        const preview = document.getElementById('imagePreview');
        const file = event.target.files[0];
        
        if (file) {
            const reader = new FileReader();
            const previewIcon = preview.querySelector('.preview-icon');
            const uploadText = preview.querySelector('.upload-text');
            
            reader.onload = function(e) {
                if (previewIcon) previewIcon.style.display = 'none';
                if (uploadText) uploadText.style.display = 'none';
                
                let img = preview.querySelector('img');
                if (!img) {
                    img = document.createElement('img');
                    img.classList.add('preview-image');
                    img.style.maxWidth = '100%';
                    img.style.maxHeight = '200px';
                    img.style.borderRadius = '8px';
                    preview.prepend(img);
                }
                
                img.src = e.target.result;
                img.style.display = 'block';
            }
            
            reader.readAsDataURL(file);
        }
    });
</script>
