{# templates/front/reclamation/new.html.twig #}
{% extends 'Front/userDashboard.html.twig' %}

{% block title %}New Reclamation{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">New Reclamation</h1>
        <a href="{{ path('user_reclamation_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to list
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.type, 'Type of Reclamation') }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.type) }}
                </div>
                
                <div class="mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="mb-3">
                    <button class="btn btn-primary">
                        <i class="fas fa-paper-plane me-1"></i> Submit
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<style>
    .form-select, .form-control {
        border-radius: 0.4rem;
        box-shadow: none;
        border: 1px solid #ced4da;
    }
    .form-select:focus, .form-control:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.2rem rgba(13,110,253,.25);
    }
</style>
{% endblock %}
