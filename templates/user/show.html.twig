{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
<br>
<br>
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>User Details</h1>
        <div>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-outline-secondary">Edit</a>
            <a href="{{ path('app_user_index') }}" class="btn btn-outline-primary">← Back to list</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-borderless mb-0">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Full Name</th>
                        <td>{{ user.firstName ~ ' ' ~ user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>{{ user.phoneNumber ?: '-' }}</td>
                    </tr>
                    <tr>
                        <th>Gouvernorat / Municipalite</th>
                        <td>{{ user.gouvernorat ?: '-' }} / {{ user.municipalite ?: '-' }}</td>
                    </tr>
                    <tr>
                        <th>Adresse</th>
                        <td>{{ user.adresse ?: '-' }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ user.status ?: '-' }}</td>
                    </tr>
                    <tr>
                        <th>Bloqué</th>
                        <td>{{ user.bloque ?: '-' }}</td>
                    </tr>
                    <tr>
                        <th>Verified</th>
                        <td>
                            {% if user.isVerified %}
                                <span class="badge bg-success">Yes</span>
                            {% else %}
                                <span class="badge bg-danger">No</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge bg-secondary">{{ role }}</span>
                            {% endfor %}
                        </td>
                    </tr>
                    <tr>
                        <th>Profile Image</th>
                        <td>
                            {% if user.image %}
                                <img src="{{ asset(user.image) }}" alt="User Image" class="img-thumbnail" style="max-height: 150px;">
                            {% else %}
                                <span class="text-muted">No image</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer text-end">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
